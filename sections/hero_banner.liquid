{{ 'hero_banner.css' | asset_url | stylesheet_tag }}

<div
  class="hero-banner"
  style="background-image: url({{ section.settings['hero-banner'] | img_url: 'master' }});"
>
  <h1>{{ section.settings['banner-text'] }}</h1>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
        {
          "type": "image_picker",
          "id": "hero-banner",
          "label": "Banner Picker"
        },
    {
      "label": "Header",
      "type": "text",
      "id": "banner-text"
    }
  ],
   "presets": [
    {
      "name": "hero_banner"
    }
  ]
}
{% endschema %}
