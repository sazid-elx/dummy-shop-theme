<div class="individual-collection" id="{{ section.id }}">
  <p>{{ collection_handle }}</p>

  <div class="flex justify-between">
    <h3>{{ title }}</h3>
    {%
      assign collection = collections[    <p>{{ collection_handle }}</p>
      ]
    %}
    {% if collection.products.size > 4 %}
      {{ 'Show More' | link_to: collection.url, class: 'link-txt' }}
    {% endif %}
  </div>
  <div class="prod-holder">
    {% for product in collection.products %}
      {% if product.collections contains collection_handle %}
        {% render 'product-item', product: product %}
      {% endif %}
    {% endfor %}
  </div>
</div>

