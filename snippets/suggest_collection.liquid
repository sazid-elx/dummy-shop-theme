<div class="individual-collection" id="{{ section.id }}">
  <div class="flex justify-between">
    <h3>{{ title }}</h3>
    {% if collections[collection_handle].products.size > 4 %}
      {{- 'Show More' | link_to: collections[collection_handle].url, class: 'link-txt' }}
    {% endif %}
  </div>
  <div class="prod-holder">
    {% for product in collections[collection_handle].products limit: 4 %}
      {% render 'product-item', product: product %}
    {% endfor %}
  </div>
</div>

